---
import {
  DefaultHeadLayout,
  DefaultHeaderLayout,
  DefaultFooterLayout,
} from "@/components/";

interface Props {
  lang?: string;
  title?: string;
  author?: string;
  description?: string;
  keywords?: string;
  image?: string;
}

const { lang, title, author, description, keywords, image } = Astro.props;
---

<DefaultHeadLayout
  lang={lang}
  title={title}
  author={author}
  description={description}
  keywords={keywords}
  image={image}
>
  <DefaultHeaderLayout />
  <slot />
  <DefaultFooterLayout />
</DefaultHeadLayout>
