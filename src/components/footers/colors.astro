---
import pkg from "@/package.json";
import { getYear, randomArray } from "..";

interface Link {
  title: string;
  url: string;
}

interface Props {
  author?: string;
  links?: Link[];
  color?:
    | "gray"
    | "red"
    | "green"
    | "blue"
    | "cyan"
    | "magenta"
    | "yellow"
    | "orange"
    | "pink"
    | "purple"
    | "random";
}

const { author = pkg.author.name, links, color = "random" } = Astro.props;

let selectColor;

if (color === "random") {
  const colors = [
    "gray",
    "red",
    "green",
    "blue",
    "cyan",
    "magenta",
    "yellow",
    "orange",
    "pink",
    "purple",
  ];

  selectColor = randomArray(colors);
} else {
  selectColor = color;
}

const hrClass = `border-${selectColor}-500`;
const pClass = `text-${selectColor}-400`;
const linkClass = `text-${selectColor}-400 hover:text-${selectColor}-500`;

