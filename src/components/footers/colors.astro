---

<footer>
  <div class="container py-6 mx-auto">
    <hr class={`my-8 ${hrClass}`} />

    <div class="flex flex-col items-center sm:flex-row sm:justify-between">
      <p class={`mt-4 ${pClass}`}>
        Â© Copyright {getYear()}. {author}.
      </p>

      <div class="flex mt-4">
        {
          links &&
            links.length > 0 &&
            links.map((link) => (
              <a
                href={link.url}
                aria-label={link.title}
                class={`mx-2 ${linkClass} transition-colors duration-300`}
                data-astro-prefetch
              >
                {link.title}
              </a>
            ))
        }
      </div>
    </div>
  </div>
