---
import pkg from "@/../package.json";
import { getYear } from "../..";

interface Link {
  title: string;
  url: string;
}

interface Props {
  lang?: string;
  author?: string;
  links?: Link[];
  color?:
    | "gray"
    | "red"
    | "green"
    | "blue"
    | "cyan"
    | "magenta"
    | "yellow"
    | "orange"
    | "pink"
    | "purple";
}

const {
  lang = pkg.lang,
  author = pkg.author.name,
  links,
  color = "gray",
} = Astro.props;

const hrClass = `my-10 border-${color}-500`;
const pClass = `text-sm text-${color}-400`;
const linkClass = `mx-2 text-sm text-${color}-400 transition-colors duration-300 hover:text-${color}-500`;

